<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>
<body>
    
    <%- include('../includes/header.ejs') %>

    <main class="main">
        <section class="add-product-section">
            <form action="/admin/edit-product" method="post" class="add-product-form">
                <input type="hidden" name="id" value="<%= product._id %>">
                <div class="input-container">
                    <p class="add-product-p">Title : </p> 
                    <input type="text" name="title" class="add-product-input" value="<%= product.title %>">
                </div>
                <div class="input-container">
                    <p class="add-product-p">Description : </p> 
                    <textarea name="description" class="add-product-textarea"><%= product.description %></textarea>
                </div>
                <div class="input-container">
                    <p class="add-product-p">Image Link : </p> 
                    <input type="text" name="image_link" class="add-product-input" value="<%= product.image_link %>">
                </div>
                <div class="input-container">
                    <p class="add-product-p">Price : </p> 
                    <input type="number" step="0.01" name="price" class="add-product-input" value="<%= product.price %>">
                </div>
                <div class="button-container">
                    <button type="submit" class="add-product-submit-button">Update Product</button>
                </div>
            </form>
        </section>
    </main>

</body>
</html>