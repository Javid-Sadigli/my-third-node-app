<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    
    <%- include('../includes/header.ejs') %>

    <main>
        <section class="products-section">
            <% if (products.length > 0) { %>
            <h1 class="page-title">My Products</h1>
            <div class="products">
                <% for(product of products) { %>        
                    <div class="product-card">
                        <div class="product-title-div">
                            <h1 class="product-title">
                                <%= product.title %> (<%= product.cardItem.amount %>)
                            </h1>
                        </div>
                        <div class="product-image-div">
                            <div class="product-image">
                                <img src="<%= product.image_link %>" alt="<%= product.title %>">
                            </div>
                        </div>
                        <form class="product-buttons" method="post" action="/delete-from-card/<%= product.id %>">
                            <a href="/product-details?id=<%= product.id %>" class="product-a">Details</a>
                            <button type="submit" class="product-delete-button">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
            <% } else { %>
                <h1 class="page-title">No product in the card</h1>
            <% } %>    
        </section>
        <section class="total-price-section">
            <form class="total-price-form" method="post" action="/add-to-order">
                <div class="total-price-h1-div">
                    <h1 class="total-price-h1">
                        Total Price : <%= totalPrice %> azn
                    </h1>
                </div>
                <div class="total-price-button-div">
                    <button class="total-price-button" type="submit">
                        Order now!
                    </button>
                </div>
            </form>
        </section>
    </main>

</body>
</html>