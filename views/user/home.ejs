<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    
    <%- include('../includes/header.ejs') %>

    <main>
        <section class="products-section">
            <% if (products.length > 0) { %>
            <h1 class="page-title">My Products</h1>
            <div class="products">
                <% for(product of products) { %>        
                    <div class="product-card">
                        <div class="product-title-div">
                            <h1 class="product-title">
                                <%= product.title %>
                            </h1>
                        </div>
                        <div class="product-image-div">
                            <div class="product-image">
                                <img src="<%= product.image_link %>" alt="<%= product.title %>">
                            </div>
                        </div>
                        <form class="product-buttons" method="post" action="/add-to-card/<%= product._id %>">
                            <a href="/product-details?id=<%= product._id %>" class="product-a">Details</a>
                            <button type="submit" class="product-button">Add to Card</button>
                        </form>
                    </div>
                <% } %>
            </div>
            <% } else { %>
                <h1 class="page-title">No product</h1>
            <% } %>    
        </section>
    </main>

</body>
</html>